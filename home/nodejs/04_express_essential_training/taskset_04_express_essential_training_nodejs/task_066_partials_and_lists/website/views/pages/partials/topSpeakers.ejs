<article class="speakerslist jumbotron d-none d-sm-block">
    <div class="container">
        <div class="row">
            <% topSpeakers.forEach(function(speaker) {%>
                <div class="col-md text-center">
                    <h4 class="speakerslist-title">
                        <%=speaker.title%>
                    </h4>
                    <div class="speakerslist-name">
                        with
                        <a href="/speakers/<%=speaker.shortname%>">
                            <%=speaker.name%>
                        </a>
                    </div>
                    <p class="speakerslist-info mt-2">
                        <a href="/speakers/<%=speaker.shortname%>">
                            <img class="speakerslist-img rounded-circle"
                                src="/images/speakers/<%=speaker.shortname%>_tn.jpg" alt="Photo of <%=speaker.name%>" />
                        </a>
                    </p>
                </div>
                <%})%>
        </div>
    </div>
</article>